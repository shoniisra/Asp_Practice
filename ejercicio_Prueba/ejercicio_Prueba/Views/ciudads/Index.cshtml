@model IEnumerable<ejercicio_Prueba.Models.ciudad>

@{
    ViewBag.Title = "Ciudades";
}

<h2>Ciudades del Ecuador</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ciu_nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.provincia.prov_nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ciu_nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.provincia.prov_nombre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idciudad }) |
