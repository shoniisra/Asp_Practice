            @Html.DisplayFor(modelItem => item.con_subtotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.con_iva)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.con_total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.auto.auto_placa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cliente.cli_nombre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.com_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.com_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.com_id })
