@model IEnumerable<AutosDataAnnotation.compra>

@{
    ViewBag.Title = "Compra";
}

<h2>Compra</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.com_fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.con_subtotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.con_iva)
