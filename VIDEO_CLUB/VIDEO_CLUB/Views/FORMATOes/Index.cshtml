@model IEnumerable<VIDEO_CLUB.FORMATO>

@{
    ViewBag.Title = "Index";
}

<h2>Formatos de Películas</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FOR_NOMBRE)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FOR_NOMBRE)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FOR_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.FOR_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.FOR_ID })
        </td>
    </tr>
}

</table>
